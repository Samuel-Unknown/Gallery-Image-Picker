<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GalleryImagePicker" />

    <style name="GalleryImagePicker.Theme.Transparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/gallery_image_picker__color_transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/gallery_image_picker__color_transparent</item>
        <item name="bottomSheetDialogTheme">?attr/gallery_image_picker__theme_bottom_sheet_dialog</item>
    </style>

    <style name="GalleryImagePicker.Theme.Light" parent="GalleryImagePicker.Theme.Transparent">
        <item name="gallery_image_picker__theme_app_bar">@style/GalleryImagePicker.ThemeOverlay.AppBar</item>
        <item name="gallery_image_picker__theme_bottom_sheet_dialog">@style/GalleryImagePicker.ThemeOverlay.BottomSheetDialog</item>
        <item name="gallery_image_picker__shape_bottom_sheet_top_line">@drawable/bg_dialog_line</item>
        <item name="gallery_image_picker__style_bottom_sheet">@style/GalleryImagePicker.Widget.BottomSheetDialog</item>
        <item name="gallery_image_picker__style_toolbar">@style/GalleryImagePicker.Widget.Toolbar</item>
        <item name="gallery_image_picker__style_button">@style/GalleryImagePicker.Widget.PickupButton</item>
        <item name="gallery_image_picker__style_counter">@style/GalleryImagePicker.Widget.Counter</item>
        <item name="gallery_image_picker__text_appearance_button">@style/GalleryImagePicker.TextAppearance.Button</item>
        <item name="gallery_image_picker__text_appearance_counter">@style/GalleryImagePicker.TextAppearance.Counter</item>
    </style>

    <style name="GalleryImagePicker.Theme.Dark" parent="GalleryImagePicker.Theme.Transparent">
        <item name="gallery_image_picker__theme_app_bar">@style/GalleryImagePicker.ThemeOverlay.AppBar</item>
        <item name="gallery_image_picker__theme_bottom_sheet_dialog">@style/GalleryImagePicker.ThemeOverlay.BottomSheetDialog</item>
        <item name="gallery_image_picker__shape_appearance_bottom_sheet_dialog">@style/GalleryImagePicker.ShapeAppearance.BottomSheetDialog</item>
        <item name="gallery_image_picker__shape_bottom_sheet_top_line">@drawable/bg_dialog_line</item>
        <item name="gallery_image_picker__style_bottom_sheet">@style/GalleryImagePicker.Widget.BottomSheetDialog</item>
        <item name="gallery_image_picker__style_toolbar">@style/GalleryImagePicker.Widget.Toolbar</item>
        <item name="gallery_image_picker__style_button">@style/GalleryImagePicker.Widget.PickupButton</item>
        <item name="gallery_image_picker__style_counter">@style/GalleryImagePicker.Widget.Counter</item>
        <item name="gallery_image_picker__text_appearance_button">@style/GalleryImagePicker.TextAppearance.Button</item>
        <item name="gallery_image_picker__text_appearance_counter">@style/GalleryImagePicker.TextAppearance.Counter</item>
    </style>
</resources>