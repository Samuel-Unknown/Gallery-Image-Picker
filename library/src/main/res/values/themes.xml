<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GalleryImagePicker" />

    <style name="GalleryImagePicker.Theme.Transparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:navigationBarColor">#00000000</item>
        <item name="bottomSheetDialogTheme">@style/GalleryImagePicker.ThemeOverlay.BottomSheetDialog</item>
    </style>

    <style name="GalleryImagePicker.ThemeOverlay.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/GalleryImagePicker.Widget.BottomSheetDialog</item>
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:navigationBarColor">#FFFFFF</item>
        <!--<item name="android:statusBarColor">#00000000</item>--> <!-- And then this will be needed -->
    </style>

    <style name="GalleryImagePicker.ThemeOverlay.AppBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/gallery_image_picker__color_toolbar</item>
        <item name="colorOnPrimary">@color/gallery_image_picker__color_toolbar_text</item>
        <item name="android:colorControlHighlight">@color/gallery_image_picker__color_toolbar_icon_highlight</item>
    </style>

    <style name="GalleryImagePicker.ThemeOverlay.Popup" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>