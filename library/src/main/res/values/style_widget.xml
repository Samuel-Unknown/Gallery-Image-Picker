<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GalleryImagePickerWidget" />

    <style name="GalleryImagePickerWidget.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/GalleryImagePickerTheme.Overlay.Popup</item>
        <item name="navigationIconTint">@color/gallery_image_picker__color_toolbar_icon</item>
        <item name="titleTextColor">@color/gallery_image_picker__color_toolbar_text</item>
    </style>

    <style name="GalleryImagePickerWidget.BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/GalleryImagePickerWidget.BottomSheetDialog.ShapeAppearance</item>
    </style>

    <style name="GalleryImagePickerWidget.BottomSheetDialog.ShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>